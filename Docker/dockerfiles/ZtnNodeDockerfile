# build with `docker build -t ZtnNode:1.0 .`
# get base ubuntu image
FROM ubuntu

COPY NetworkTraffic/SYN_flood.py /home/
COPY NetworkTraffic/SYN_flood_tool.py /home/
COPY NetworkTraffic/pcap_generator.py /home/
COPY NetworkTraffic/flooder_pcap.py /home/

RUN apt update && apt install -y iputils-ping, python3
RUN py -m pip install scapy, argparse

CMD ["py", "pcap_generator.py 100 NetTraffic.pcap"]
